datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Product {
    id             Int        @id @default(autoincrement())
    barcode        String     @unique
    title          String     @unique
    description    String?
    published      Boolean    @default(false)
    categories     Category[]
    photos         Photo[]
    price          Float
    stock          Int        @default(1)
    salePercentage Float?
    weight         Float?
    height         Float?
    width          Float?
    depth          Float?
    reviews        Review[]
    @@unique([barcode, title], name: "barcode")
}

model Category {
    id        Int       @id @default(autoincrement())
    title     String
    published Boolean   @default(true)
    products  Product[]
    parentId  Int?
    @@unique([title, parentId], name: "title")
}

model Photo {
    id        Int     @id @default(autoincrement())
    title     String?
    url       String
    product   Product @relation(fields: [productId], references: [id])
    productId Int
}

model Review {
    id          Int     @id @default(autoincrement())
    title       String
    author      String
    description String
    stars       Int     @default(0)
    product     Product @relation(fields: [productId], references: [id])
    productId   Int
}
